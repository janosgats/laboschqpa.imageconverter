FROM openjdk:11
MAINTAINER "JÃ¡nos Gats <gatsjanos@gmail.com>"

###### Adding APR Support >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
ARG DEBIAN_FRONTEND=noninteractive
ENV LD_LIBRARY_PATH ${LD_LIBRARY_PATH}:/usr/lib/x86_64-linux-gnu/
#Install commands are intentionally separated
RUN apt-get update && \
    apt-get install -y --no-install-recommends apt-utils && \
    apt-get install -y --no-install-recommends libtcnative-1
###### End of: Adding APR Support <<<<<<<<<<<<<<<<<<<<<<<<<<<<<

ENV APP_HOME=/home/spring-user/app
ENV LOGGING_ENABLE_LOCALDEV_CONSOLE_APPENDER=true

RUN groupadd -g 10002 spring-user && \
    useradd -m -u 10002 -g spring-user spring-user

WORKDIR ${APP_HOME}

HEALTHCHECK --interval=15s \
            --retries=3 \
            --start-period=1m \
            --timeout=5s \
            CMD curl --fail http://localhost:4300 || exit 1

EXPOSE 30006
EXPOSE 4300

COPY --chown=spring-user:spring-user build/libs/laboschqpa.imageconverter.jar ${APP_HOME}/laboschqpa.imageconverter.jar

USER spring-user